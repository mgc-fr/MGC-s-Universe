        <script>
            let index = 0; // Indice de l'image actuelle
        
            function showSlide() {
                const carousel = document.querySelector(".carousel");
                carousel.style.transform = `translateX(${-index * 100}%)`;
            }
        
            function nextSlide() {
                const images = document.querySelectorAll(".carousel img");
                if (index < images.length - 1) {
                    index++;
                } else {
                    index = 0; // Revenir à la première image (optionnel)
                }
                showSlide();
            }
        
            function prevSlide() {
                const images = document.querySelectorAll(".carousel img");
                if (index > 0) {
                    index--;
                } else {
                    index = images.length - 1; // Aller à la dernière image (optionnel)
                }
                showSlide();
            }
        </script>
        
